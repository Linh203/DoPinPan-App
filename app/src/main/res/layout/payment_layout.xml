<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@color/ic_launcher_background"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="10dp"
        android:background="@color/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical">
            <LinearLayout
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xác Nhận Thanh Toán"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa Chỉ :"
                    android:textSize="20dp"/>
                <EditText
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_address" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Tiền Hóa Đơn:"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/oder_total1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|start"
                    android:text="total"
                    android:textAllCaps="true"
                    android:textColor="#FF0000"
                    android:textSize="20dp"
                    android:textStyle="italic" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Điện Thoại :"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/oder_phone1"
                    android:layout_marginLeft="10dp"
                    android:text="Oder Phone"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:gravity="center_vertical|start"/>
            </LinearLayout>
            <Button
                android:textColor="@color/white"
                android:id="@+id/btn_paylocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh Toán Khi Nhận Hàng"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:backgroundTint="#8000FF"/>
            <Button
                android:textColor="@color/white"

                android:id="@+id/btn_zalopay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ZaloPay"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:backgroundTint="#0088FF"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>